<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvItemHomeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:text="14-02-89"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemHomeDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvItemHomeDate"
        app:layout_constraintTop_toBottomOf="@+id/tvItemHomeDate"
        tools:text="Descripcion Transaccion" />

    <TextView
        android:id="@+id/tvItemHomeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="#D32F2F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemHomeDate"
        app:layout_constraintEnd_toStartOf="@+id/ivItemHome"
        app:layout_constraintTop_toTopOf="@+id/tvItemHomeDate"
        tools:text="99€" />

    <ImageView
        android:id="@+id/ivItemHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemHomeAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvItemHomeAmount"
        tools:srcCompat="@drawable/ic_in" />

    <TextView
        android:id="@+id/tvItemHomeFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ivItemHome"
        app:layout_constraintStart_toStartOf="@+id/tvItemHomeAmount"
        app:layout_constraintTop_toBottomOf="@+id/ivItemHome"
        tools:text="Tasa : 5.8€" />
</androidx.constraintlayout.widget.ConstraintLayout>